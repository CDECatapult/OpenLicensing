olex:Unit a owl:Class ;
    rdfs:label "Unit"^^xsd:string ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> .

olex:UnitScheme a skos:ConceptScheme ;
    skos:hasTopConcept olex:topUnit .

olex:topUnit a olex:Unit,
        skos:Concept ;
    skos:inScheme olex:UnitScheme ;
    skos:name "topUnit"@en .

olex:pixel a olex:Unit,
        skos:Concept ;
    skos:inScheme olex:UnitScheme ;
    skos:name "pixel"@en ;
    skos:narrowerThan olex:topUnit .

olex:visitorsPerMonth a olex:Unit,
        skos:Concept ;
    skos:inScheme olex:UnitScheme ;
    skos:name "visitorsPerMonth"@en ;
    skos:narrowerThan olex:topUnit .

olex:attributeText a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    dc:description """
                    Required textual representation of copyrights attribution.
                    """@en ;
    rdfs:domain olex:Constraint ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf odrl:rightOperand .

olex:height a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    rdfs:domain olex:Constraint ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf odrl:rightOperand .

olex:width a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    rdfs:domain olex:Constraint ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf odrl:rightOperand .

olex:host a owl:FunctionalProperty,
        owl:ObjectProperty ;
    dc:description """
                    Specifies on which type of host the asset may be presented or posted.
                    """@en ;
    rdfs:domain olex:Constraint ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:range olex:Host ;
    rdfs:subPropertyOf odrl:rightOperand .

olex:views a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    dc:description """
                    Specifies the maximum number of views of the asset that may result in.
                    """@en ;
    rdfs:domain olex:Constraint ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:range xsd:integer ;
    rdfs:subPropertyOf odrl:rightOperand .


olex:Constraint a [ a owl:Restriction ;
            owl:maxCardinality 1 ;
            owl:onProperty olex:views ],
        [ a owl:Restriction ;
            owl:maxCardinality 1 ;
            owl:onProperty olex:height ],
        [ a owl:Restriction ;
            owl:allValuesFrom olex:Host ;
            owl:maxCardinality 1 ;
            owl:onProperty olex:host ],
        [ a owl:Restriction ;
            owl:maxCardinality 1 ;
            owl:onProperty olex:width ],
        [ a owl:Restriction ;
            owl:maxCardinality 1 ;
            owl:onProperty olex:attributeText ],
        owl:Class ;
    rdfs:label "Constraint"^^xsd:string ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> ;
    rdfs:subClassOf odrl:Constraint .

    
olex:Host a owl:Class ;
    dc:description """
            The Host describes the type of site or device the asset can be used on.
            """@en ;
    rdfs:label "Host"^^xsd:string ;
    rdfs:isDefinedBy <http://openlicensing.org/ns/olex/1.0/> .

olex:HostScheme a skos:ConceptScheme ;
    skos:hasTopConcept olex:anyHost .

olex:anyHost a olex:Host,
    skos:Concept ;
    skos:inScheme olex:HostScheme ;
    skos:name "anyHost"@en .


olex:personalDevice a olex:Host,
        skos:Concept ;
    dc:description """
            The Asset can be used on personal devices (e.g: Mobile Phone, Desktop Background, Camera Roll)
            """@en ;
    skos:inScheme olex:HostScheme ;
    skos:name "personal device"@en ;
    skos:narrowerThan olex:anyHost .

olex:personalSocialMediaWebsite a olex:Host,
        skos:Concept ;
    dc:description """
            The Asset can be used on personal social media accounts.
            """@en ;
    skos:inScheme olex:HostScheme ;
    skos:name "personal social media site"@en ;
    skos:narrowerThan olex:anyHost .

olex:nonCommercialWebsite a olex:Host,
        skos:Concept ;
    dc:description """
            The Asset can be used on a personal website that does not generate income or carry advertising.
            """@en ;
    skos:inScheme olex:HostScheme ;
    skos:name "non commercial website"@en ;
    skos:narrowerThan olex:anyHost .

olex:commercialWebsite a olex:Host,
        skos:Concept ;
    dc:description """
            The Asset can be used on a website that generates income or carries advertising.
            """@en ;
    skos:inScheme olex:HostScheme ;
    skos:name "commercial website"@en ;
    skos:narrowerThan olex:anyHost .

